<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/titleLinear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="50dp"

        >
        <TextView
            android:id="@+id/endTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="David"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/finalScore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="David"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scoreTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3"
        android:layout_below="@id/titleLinear"
        >
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_column="1"
                android:text="First place"
                android:padding="3dip" />

            <TextView
                android:id="@+id/firstRowSecondCell_win"
                android:layout_column="2"
                android:text="player_name"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:id="@+id/firstRowThirdCell_win"
                android:layout_column="2"
                android:text="score1"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow
            android:paddingBottom="20dp"

            >
            <TextView
                android:layout_column="1"
                android:text="Second place                     "
                android:padding="3dip" />

            <TextView
                android:id="@+id/secondRowSecondCell_win"
                android:layout_column="2"
                android:text="player_name"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:id="@+id/secondRowthirdCellCell_win"
                android:layout_column="2"
                android:text="score1"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Third place"
                android:padding="3dip" />

            <TextView
                android:id="@+id/thirdRowSecondCell_win"
                android:layout_column="2"
                android:text="player_name"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:id="@+id/thirdRowThirdCell_win"
                android:layout_column="2"
                android:text="score1"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />


    </TableLayout>



</RelativeLayout>