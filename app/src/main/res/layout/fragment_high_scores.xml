<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/your_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:fitsSystemWindows="true"
        android:id="@+id/rScores"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:id="@+id/chooseLevel"
            >
            <CheckBox android:id="@+id/checkbox_easy_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:paddingRight="20dp"
            ></CheckBox>
            <CheckBox android:id="@+id/checkbox_medium_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:paddingRight="20dp"></CheckBox>
            <CheckBox android:id="@+id/checkbox_hard_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard"></CheckBox>
        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scoreTable_scores"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooseLevel"
            android:paddingTop="40dp"
            >


        </LinearLayout>

        <!--<View-->
            <!--android:layout_height="2dip"-->
            <!--android:background="#FF909090" />-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:layout_alignParentBottom="true"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/floatingMapActionButton"/>


    </RelativeLayout>
</FrameLayout>