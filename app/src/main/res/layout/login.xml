<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:scaleType = "centerCrop"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/mainLinear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView android:src="@mipmap/mine"
            android:id="@+id/welcome"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_scores"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:src="@mipmap/highscores"/>
        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MineSweeperChamp (press to change)"
            />


        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Please choose level:"
            android:textSize="20dp"
                />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <CheckBox android:id="@+id/checkbox_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkbox_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkbox_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:onClick="onCheckboxClicked"/>
        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            />


        <TextView android:id="@+id/credits"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Eilon Laor and Dvir Twina "
            android:gravity="center"
            android:textSize="16dip"/>



    </LinearLayout>

</RelativeLayout>